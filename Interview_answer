Q3)
#!/bin/bash

websites=("google.com" "github.com" "nonexistantwebsite.example")

for i in "${websites[@]}"; do
  ping -c 1 "$i"
  if [ $? -eq 0 ]; then
    echo "$i is reachable"
  else
    echo "$i is not reachable"
  fi
done

